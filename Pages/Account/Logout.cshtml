@page
@model InterportCargo.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-4">
                        <i class="fas fa-sign-out-alt fa-3x text-danger mb-3"></i>
                        <h2 class="card-title text-danger">Logout</h2>
                        <p class="text-muted">You have been successfully logged out</p>
                    </div>

                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        Thank you for using InterportCargo!
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a href="/Index" class="btn btn-primary">Return to Home</a>
                        <a href="/Account/Login" class="btn btn-outline-primary">Login Again</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
