@page
@model InterportCargo.Pages.Quotation.RequestModel
@{
    ViewData["Title"] = "Request Quotation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-file-invoice-dollar fa-3x text-warning mb-3"></i>
                        <h2 class="card-title text-warning">Request Quotation</h2>
                        <p class="text-muted">Submit your freight and logistics requirements for a detailed quote</p>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Please correct the following errors:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form method="post">
                        <!-- Customer Information (Read-only from session) -->
                        <h5 class="text-primary mb-3"><i class="fas fa-user me-2"></i>Customer Information</h5>
                        <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Customer Name</label>
                                <input type="text" class="form-control" value="@Model.UserName" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email Address</label>
                                <input type="email" class="form-control" value="@Model.UserEmail" readonly />
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Shipping Information -->
                        <h5 class="text-primary mb-3"><i class="fas fa-truck me-2"></i>Shipping Information</h5>
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3">
                                <label asp-for="QuotationRequest.Source" class="form-label">Source (Country of Origin)</label>
                                <input asp-for="QuotationRequest.Source" class="form-control" placeholder="Enter source country/location" />
                                <span asp-validation-for="QuotationRequest.Source" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="QuotationRequest.Destination" class="form-label">Destination</label>
                                <input asp-for="QuotationRequest.Destination" class="form-control" placeholder="Enter destination country/location" />
                                <span asp-validation-for="QuotationRequest.Destination" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="QuotationRequest.NumberOfContainers" class="form-label">Number of Containers</label>
                            <input asp-for="QuotationRequest.NumberOfContainers" type="number" class="form-control" min="1" placeholder="Enter number of containers" />
                            <span asp-validation-for="QuotationRequest.NumberOfContainers" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <!-- Nature of Package -->
                        <h5 class="text-primary mb-3"><i class="fas fa-box me-2"></i>Nature of Package</h5>
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3">
                                <label asp-for="QuotationRequest.NatureOfPackage" class="form-label">Goods Type</label>
                                <select asp-for="QuotationRequest.NatureOfPackage" class="form-control">
                                    <option value="">Select goods type</option>
                                    <option value="GeneralCargo">General Cargo</option>
                                    <option value="Refrigerated">Refrigerated</option>
                                    <option value="Hazardous">Hazardous Materials</option>
                                    <option value="Oversized">Oversized Cargo</option>
                                    <option value="Fragile">Fragile Items</option>
                                    <option value="Electronics">Electronics</option>
                                    <option value="Food">Food Products</option>
                                    <option value="Machinery">Machinery</option>
                                    <option value="Textiles">Textiles</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="QuotationRequest.NatureOfPackage" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Package Dimensions -->
                        <div class="row mb-4">
                            <div class="col-md-4 mb-3">
                                <label asp-for="QuotationRequest.PackageWidth" class="form-label">Width (ft)</label>
                                <input asp-for="QuotationRequest.PackageWidth" type="number" step="0.01" class="form-control" placeholder="Enter width in feet" />
                                <span asp-validation-for="QuotationRequest.PackageWidth" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="QuotationRequest.PackageHeight" class="form-label">Height (ft)</label>
                                <input asp-for="QuotationRequest.PackageHeight" type="number" step="0.01" class="form-control" placeholder="Enter height in feet" />
                                <span asp-validation-for="QuotationRequest.PackageHeight" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="QuotationRequest.PackageDepth" class="form-label">Depth (ft) - Optional</label>
                                <input asp-for="QuotationRequest.PackageDepth" type="number" step="0.01" class="form-control" placeholder="Enter depth in feet" />
                                <span asp-validation-for="QuotationRequest.PackageDepth" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Nature of Job -->
                        <h5 class="text-primary mb-3"><i class="fas fa-tasks me-2"></i>Nature of Job</h5>
                        
                        <!-- Import or Export -->
                        <div class="mb-3">
                            <label class="form-label">Import or Export</label>
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <div class="form-check form-check-inline">
                                        <input asp-for="QuotationRequest.ImportOrExport" type="radio" value="Import" class="form-check-input" id="import" />
                                        <label class="form-check-label" for="import">Import</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="form-check form-check-inline">
                                        <input asp-for="QuotationRequest.ImportOrExport" type="radio" value="Export" class="form-check-input" id="export" />
                                        <label class="form-check-label" for="export">Export</label>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="QuotationRequest.ImportOrExport" class="text-danger"></span>
                        </div>

                        <!-- Packing or Unpacking -->
                        <div class="mb-4">
                            <label class="form-label">Packing or Unpacking</label>
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <div class="form-check form-check-inline">
                                        <input asp-for="QuotationRequest.PackingOrUnpacking" type="radio" value="Packing" class="form-check-input" id="packing" />
                                        <label class="form-check-label" for="packing">Packing</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="form-check form-check-inline">
                                        <input asp-for="QuotationRequest.PackingOrUnpacking" type="radio" value="Unpacking" class="form-check-input" id="unpacking" />
                                        <label class="form-check-label" for="unpacking">Unpacking</label>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="QuotationRequest.PackingOrUnpacking" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <!-- Quarantine & Fumigation Details -->
                        <h5 class="text-primary mb-3"><i class="fas fa-clipboard-check me-2"></i>Quarantine & Fumigation</h5>
                        
                        <!-- Quarantine Details -->
                        <div class="mb-3">
                            <div class="form-check mb-2">
                                <input asp-for="QuotationRequest.IsQuarantineRequired" class="form-check-input" type="checkbox" id="quarantineRequired" />
                                <label class="form-check-label" for="quarantineRequired">
                                    Quarantine Required
                                </label>
                            </div>
                            <div id="quarantineDetails" style="display: none;">
                                <label asp-for="QuotationRequest.QuarantineDetails" class="form-label">Quarantine Details (Origin and Treatment History)</label>
                                <textarea asp-for="QuotationRequest.QuarantineDetails" class="form-control" rows="3" placeholder="Enter quarantine details including origin and treatment history"></textarea>
                                <span asp-validation-for="QuotationRequest.QuarantineDetails" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Fumigation Details -->
                        <div class="mb-4">
                            <div class="form-check mb-2">
                                <input asp-for="QuotationRequest.IsFumigationRequired" class="form-check-input" type="checkbox" id="fumigationRequired" />
                                <label class="form-check-label" for="fumigationRequired">
                                    Fumigation Required
                                </label>
                            </div>
                            <div id="fumigationDetails" style="display: none;">
                                <label asp-for="QuotationRequest.FumigationDetails" class="form-label">Fumigation Details (Potential Pest Threats)</label>
                                <textarea asp-for="QuotationRequest.FumigationDetails" class="form-control" rows="3" placeholder="Enter fumigation details about potential pest threats"></textarea>
                                <span asp-validation-for="QuotationRequest.FumigationDetails" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Additional Requirements -->
                        <div class="mb-4">
                            <label asp-for="QuotationRequest.AdditionalRequirements" class="form-label">Additional Requirements or Special Instructions</label>
                            <textarea asp-for="QuotationRequest.AdditionalRequirements" class="form-control" rows="4" placeholder="Enter any additional requirements or special instructions"></textarea>
                            <span asp-validation-for="QuotationRequest.AdditionalRequirements" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Index" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-warning btn-lg">Submit Request</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show/hide quarantine details
        document.getElementById('quarantineRequired').addEventListener('change', function() {
            document.getElementById('quarantineDetails').style.display = this.checked ? 'block' : 'none';
        });

        // Show/hide fumigation details
        document.getElementById('fumigationRequired').addEventListener('change', function() {
            document.getElementById('fumigationDetails').style.display = this.checked ? 'block' : 'none';
        });
    </script>
}