@page
@using InterportCargo.BusinessLogic.Entities
@model InterportCargo.Pages.RateSchedule.IndexModel
@{
    ViewData["Title"] = "Rate Schedule";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">
                    <i class="fas fa-calculator me-2"></i>Rate Schedule
                </h2>
                <a href="/Quotations/Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Quotations
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Service Type</th>
                                    <th class="text-end">20 Feet Container</th>
                                    <th class="text-end">40 Feet Container</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var rate in Model.RateSchedules)
                                {
                                    var isGst = string.Equals(rate.ServiceType, "GST", StringComparison.OrdinalIgnoreCase);
                                    <tr>
                                        <td><strong>@rate.ServiceType</strong></td>
                                        @if (isGst)
                                        {
                                            var gst20 = rate.Rate20Feet <= 1 ? rate.Rate20Feet * 100 : rate.Rate20Feet;
                                            var gst40 = rate.Rate40Feet <= 1 ? rate.Rate40Feet * 100 : rate.Rate40Feet;
                                            <td class="text-end">@gst20.ToString("N0")%</td>
                                            <td class="text-end">@gst40.ToString("N0")%</td>
                                        }
                                        else
                                        {
                                            <td class="text-end">$@rate.Rate20Feet.ToString("N2")</td>
                                            <td class="text-end">$@rate.Rate40Feet.ToString("N2")</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-3">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Note:</strong> GST (Goods and Services Tax) of 10% applies to all charges. This rate schedule is for reference when preparing quotations.
            </div>
        </div>
    </div>
</div>
