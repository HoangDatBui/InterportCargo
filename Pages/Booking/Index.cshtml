@page
@model InterportCargo.Pages.Booking.IndexModel
@{
    ViewData["Title"] = "Booking Management";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="text-secondary">
                        <i class="fas fa-calendar-check me-2"></i>Booking Management
                    </h2>
                    <p class="text-muted">Schedule and manage your freight bookings and services</p>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <div class="text-center py-5">
                        <i class="fas fa-lock fa-4x text-secondary mb-3"></i>
                        <h4 class="text-secondary">Authentication Required</h4>
                        <p class="text-muted">You need to be logged in to access booking management features.</p>
                        <a href="/Account/Login" class="btn btn-secondary me-2">Login</a>
                        <a href="/Index" class="btn btn-outline-secondary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
