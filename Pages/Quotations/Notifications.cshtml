@page
@model InterportCargo.Pages.Quotations.NotificationsModel
@{
    ViewData["Title"] = "Notifications";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-body p-4">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="text-primary mb-1">
                                <i class="fas fa-bell me-2"></i>Notifications
                            </h2>
                            <p class="text-muted mb-0">Responses to your quotation requests</p>
                        </div>
                        <div>
                            @if (Model.UnreadCount > 0)
                            {
                                <span class="badge bg-danger">@Model.UnreadCount Unread</span>
                            }
                        </div>
                    </div>

                    @if (Model.Notifications != null && Model.Notifications.Any())
                    {
                        <div class="list-group">
                            @foreach (var notification in Model.Notifications)
                            {
                                <div class="list-group-item @(!notification.IsRead ? "border-start border-4 border-primary" : "")">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h5 class="mb-2">
                                                @if (notification.Status == "Accepted")
                                                {
                                                    <i class="fas fa-check-circle text-success me-2"></i>
                                                    <span class="text-success">Quotation Accepted</span>
                                                }
                                                else if (notification.Status == "Rejected")
                                                {
                                                    <i class="fas fa-times-circle text-danger me-2"></i>
                                                    <span class="text-danger">Quotation Rejected</span>
                                                }
                                                @if (!notification.IsRead)
                                                {
                                                    <span class="badge bg-primary ms-2">New</span>
                                                }
                                            </h5>
                                            
                                            <p class="mb-2"><strong>Request ID:</strong> @Model.GetQuotationRequestId(notification.QuotationRequestId)</p>
                                            
                                            @if (!string.IsNullOrEmpty(notification.Message))
                                            {
                                                <p class="mb-2"><strong>Message:</strong></p>
                                                <p class="text-muted mb-2">@notification.Message</p>
                                            }
                                            
                                            <small class="text-muted">
                                                <i class="fas fa-user me-1"></i>@notification.OfficerName | 
                                                <i class="fas fa-calendar me-1"></i>@notification.CreatedDate.ToString("MM/dd/yyyy HH:mm")
                                            </small>
                                        </div>
                                        
                                        @if (!notification.IsRead)
                                        {
                                            <form method="post" class="ms-3">
                                                <input type="hidden" name="notificationId" value="@notification.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-check me-1"></i>Mark as Read
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bell-slash fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">No Notifications</h4>
                            <p class="text-muted">You don't have any notifications yet.</p>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="/Quotations/Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Quotations
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
