<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InterportCargo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InterportCargo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">InterportCargo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("IsAuthenticated") == "true")
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    <i class="fas fa-user me-1"></i>Welcome, @Context.Session.GetString("UserName")
                                    <small class="text-muted">(@Context.Session.GetString("UserType"))</small>
                                </span>
                            </li>
                        }

                        <!-- Services as separate menu items -->
                        @if (Context.Session.GetString("IsAuthenticated") == "true")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Quotations/Index">
                                    <i class="fas fa-file-invoice-dollar me-1"></i>Quotations
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Booking/Index">
                                    <i class="fas fa-calendar-check me-1"></i>Bookings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Outturn/Index">
                                    <i class="fas fa-truck me-1"></i>Outturn
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/RateSchedule/Index">
                                    <i class="fas fa-calculator me-1"></i>Rate Schedule
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Account/Login">
                                    <i class="fas fa-file-invoice-dollar me-1"></i>Quotations
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Account/Login">
                                    <i class="fas fa-calendar-check me-1"></i>Bookings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Account/Login">
                                    <i class="fas fa-truck me-1"></i>Outturn
                                </a>
                            </li>
                        }
                        @if (Context.Session.GetString("IsAuthenticated") == "true")
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-danger" asp-page="/Account/Logout">
                                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - InterportCargo
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
