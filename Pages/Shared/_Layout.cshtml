<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InterportCargo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InterportCargo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">InterportCargo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("IsAuthenticated") == "true")
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    <i class="fas fa-user me-1"></i>Welcome, @Context.Session.GetString("UserName")
                                    <small class="text-muted">(@Context.Session.GetString("UserType"))</small>
                                </span>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user me-1"></i>Account
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                                    <li><a class="dropdown-item" href="/Account/Login"><i class="fas fa-sign-in-alt me-2"></i>Login</a></li>
                                    <li><a class="dropdown-item" href="/Account/Register"><i class="fas fa-user-plus me-2"></i>Register Customer</a></li>
                                    <li><a class="dropdown-item" href="/Account/RegisterEmployee"><i class="fas fa-user-tie me-2"></i>Register Employee</a></li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="servicesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cogs me-1"></i>Services
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="servicesDropdown">
                                @if (Context.Session.GetString("IsAuthenticated") == "true")
                                {
                                    <li><a class="dropdown-item" href="/Quotation/Request"><i class="fas fa-file-invoice-dollar me-2"></i>Request Quotation</a></li>
                                    <li><a class="dropdown-item" href="/Booking/Index"><i class="fas fa-calendar-check me-2"></i>Bookings</a></li>
                                    <li><a class="dropdown-item" href="/Outturn/Index"><i class="fas fa-truck me-2"></i>Outturn</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" href="/Account/Login"><i class="fas fa-sign-in-alt me-2"></i>Login to Request Quotation</a></li>
                                    <li><a class="dropdown-item" href="/Account/Login"><i class="fas fa-sign-in-alt me-2"></i>Login for Bookings</a></li>
                                    <li><a class="dropdown-item" href="/Account/Login"><i class="fas fa-sign-in-alt me-2"></i>Login for Outturn</a></li>
                                }
                            </ul>
                        </li>
                        @if (Context.Session.GetString("IsAuthenticated") == "true")
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-danger" asp-page="/Account/Logout">
                                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - InterportCargo
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
